<launch>
    <arg name="twist" default="false"/>

    <!--Goal Broadcaster-->
    <node pkg="mrss_motion_team_1" type="goal_broadcaster.py"
          name="goal_broadcaster" ns="pointnav" />

    <!--Map Broadcaster-->
    <node pkg="mrss_motion_team_1" type="map_broadcaster.py" name="map_broadcaster"/>

    <!--Motion Planner-->
    <group if="$(arg twist)">
        <node pkg="go1-math-motion" type="twist_sub" name="node_twist_sub" output="screen"/>
        <node pkg="mrss_motion_team_1" type="planner.py"
              name="goal_follower" ns="mrss_mmrss_motion_team_1otion" />
    </group>

</launch>
